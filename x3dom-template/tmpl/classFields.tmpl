<?js
    var fields = obj;
?>

<div>
    <?js
         if (fields && fields.length )
         {
    ?>
        <div class="row">
            <div>Name</div>
            <div>Type</div>
            <div>Inheritance</div>
            <div>Description</div>
        </div>

        <?js fields.forEach(function(f){ ?>
        <div class="row">
            <div><?js= f.name ?></div>
            <div>
            <?js=
                    ( f.type && f.type.names && f.type.names.length ) ? f.type.names[0] : "Not found"
            ?>
            </div>
            <div>
                <?js if(f.inherits)
                     {
                        var inherit = f.inherits.split('#');
                        inherit = inherit[inherit.length-2].split('.');
                        if(inherit.length)
                        {
                ?>
                <?js= inherit[inherit.length-1] ?>
                <?js }} ?>
            </div>
            <div><?js= f.description ?></div>
            </div>
        <?js }) ?>
    <?js }   ?>
</div>